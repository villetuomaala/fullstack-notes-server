{
  "name": "notes-server",
  "version": "1.0.0",
  "description": "A great note app",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon index.js",
    "build:ui": "rm -rf build && cd ../notes-frontend && npm run build --prod && cp -r build ../notes-server/",
    "deploy": "git push heroku master",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "test": "jest --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/villetuomaala/fullstack-notes-server.git"
  },
  "author": "Ville Tuomaala",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/villetuomaala/fullstack-notes-server/issues"
  },
  "homepage": "https://github.com/villetuomaala/fullstack-notes-server#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.28"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.13",
    "@types/mongoose": "^5.7.36",
    "eslint": "^7.8.1",
    "jest": "^26.4.2",
    "nodemon": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
